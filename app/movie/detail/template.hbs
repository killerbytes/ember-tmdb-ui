<h1>Movie Detail</h1>
<img src="{{image-path movie.poster_path}}" alt="">
<h2>{{movie.title}}</h2>
<ul class="menu simple">
  {{#each movie.genres as |item|}}
  <li><span class="label secondary">{{link-to item.name "genre" (query-params genre=item.id page=1) }}</span></li>
  {{/each}}
</ul>
<p>{{movie.tagline}}</p>
<h4>Overview</h4>
<p>{{movie.overview}}</p>


<h4>Cast</h4>
<ul>
  {{#each credits.cast as |item|}}
  <li>{{link-to item.name "actor" item.id }}</li>
  {{/each}}
</ul>

<h4>Similar</h4>
<ul>
  {{#each similar.results as |item|}}
  <li>{{link-to item.title "movie.detail" item.id }}</li>
  {{/each}}
</ul>

<h4>Recommendations</h4>
<ul>
  {{#each recommendations.results as |item|}}
  <li>{{link-to item.title "movie.detail" item.id }}</li>
  {{/each}}
</ul>
